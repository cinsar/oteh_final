<div class="panel panel-default">
  <div class="panel-body">
Formulario empresa
	<div>
		<% @empresa.errors.full_messages.each do |err| %>
			<p><%= err %></p>
		<% end %>

		<% @representante.errors.full_messages.each do |err| %>
			<p><%= err %></p>
		<% end %>

		<% @persona.errors.full_messages.each do |err| %>
			<p><%= err %></p>
		<% end %>
	</div>

	<%= form_tag(controller: :registro, action: :crear_empresa) do %>
	<%= hidden_field_tag :user_id, @user_id %>
	<div class="input-group">
  		<span class="input-group-addon">Nombre:</span>
  		<%= text_field_tag :empresa_nombre, @empresa.nombre , class: 'form-control'%>
	</div>

	<div class="input-group">
			<span class="input-group-addon">Giro de la empresa: </span>
			<%= text_field_tag :empresa_giro, @empresa.giro , class: 'form-control'%>
	</div>

<div>
<label>
		Número de empleados: 
    <%= text_field_tag :empresa_no_empleados, @empresa.no_empleados %>
</label>
</div>
<div>
<label>
	   Persona Fiscal: 
    <%= text_field_tag :empresa_persona_fiscal, @empresa.persona_fiscal %>
</label>
</div>


	<div>
		<label>
			Teléfono: 
			<%= text_field_tag :contacto_tel, @empresa.contacto.tel %>
		</label>
	</div>

	<div>
		<label>
			Email: 
			<%= text_field_tag :contacto_email, @empresa.contacto.email %>
		</label>
	</div>


<div>

		<label>
			Pagina web: 
			<%= text_field_tag :contacto_pag_web, @empresa.contacto.pag_web %>
		</label>
	</div>
	<div>
		<label>
			Calle: 
			<%= text_field_tag :direccion_calle, @empresa.contacto.direccion.calle %>
		</label>
	</div>

	<div>
		<label>
			Colonia: 
			<%= text_field_tag :direccion_colonia,@empresa.contacto.direccion.colonia %>
		</label>
	</div>

	<div>
		<label>
			Codigo Postal: 
			<%= text_field_tag :direccion_cp, @empresa.contacto.direccion.cp %>
		</label>
	</div>

	<div>
		<label>
			País: 
			<%= select_tag :direccion_pais, options_from_collection_for_select(Pais.all, "id", "nombre"), prompt: "Elige un país" %>
			<!-- <option value="id">"nombre"</option> -->
		</label>
	</div>

	<div>
		<label>
			Estado: 
			<%= select_tag :direccion_estado, options_for_select([]), prompt: "Elige un estado" %>
		</label>
	</div>

	<div>
		<label>
			Municipio: 
			<%= select_tag :direccion_municipio, options_for_select([]), prompt: "Elige un municipio" %>
		</label>
	</div>

	


<!-- segundo formulario -->

	<div>
		<label>
			Nombre: 
			<%= text_field_tag :representante_nombre, @persona.nombre %>
		</label>
	</div>

	<div>
		<label>
			Apellido paterno: 
			<%= text_field_tag :representante_apellido_pat, @persona.apellido_pat %>
		</label>
	</div>


	<div>
		<label>
			Apellido materno: 
			<%= text_field_tag :representante_apellido_mat, @persona.apellido_mat %>
		</label>
	</div>

	<div>
		<label>
			Puesto que desempeña: 
			<%= text_field_tag :representante_puesto, @representante.puesto %>
		</label>
	</div>


	<div>
		<label>
			Teléfono/Celular: 
			<%= text_field_tag :representante_tel, @representante.contacto.tel %>
		</label>
	</div>

	<div>
		<label>
			E-mail: 
			<%= text_field_tag :representante_email, @representante.contacto.email %>
		</label>
	</div>

	<%= submit_tag 'Guardar' %>
	
<% end %>
	</div>
<!-- form_for -->